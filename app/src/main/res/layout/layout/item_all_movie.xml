<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pfl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/state_movie"
    android:focusable="true">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/pll_larger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@color/co_ffffff"
            app:layout_heightPercent="150%w"
            app:layout_widthPercent="100%w" />

        <ImageView
            android:id="@+id/type_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignRight="@+id/iv_poster"
            android:layout_gravity="end"
            android:src="@drawable/icon_tag_hot"
            app:layout_heightPercent="40%w"
            app:layout_widthPercent="40%w" />

        <net.forcetech.cinema.module.widget.MarqueeText
            android:id="@+id/tv_movie_nav"
            android:layout_below="@+id/iv_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/state_movie_nav"
            android:textSize="20sp" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentFrameLayout>